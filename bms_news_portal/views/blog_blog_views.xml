<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="inherit_view_blog_blog_form" model="ir.ui.view">
            <field name="name">blog_blog_inherit_view_form</field>
            <field name="model">blog.blog</field>
            <field name="inherit_id" ref="website_blog.view_blog_blog_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="replace">
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="name"/>
                            <field name="subtitle"/>
                            <field name="website_id" options="{'no_create': True}"
                                   groups="website.group_multi_website"/>
                        </group>
                        <group>
                            <field name="parent_id_domain" invisible="1"/>
                            <field name="parent_id" options="{'no_create': 1}"
                                   domain="parent_id_domain"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sub blogs">
                            <field name="child_ids_domain" invisible="1"/>
                            <field name="child_ids" widget="many2many" domain="child_ids_domain">
                                <list create="0" editable="bottom">
                                    <field name="name" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>