<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="main_snippets_9_3" inherit_id="website.snippets">
            <xpath expr="//snippets[@id='snippet_groups']//t[@snippet-group][last()]" position="before">
                <t t-snippet="bms_news_portal.block_shared_snippet"
                   t-thumbnail="/bms_news_portal/static/src/images/project_image.png"/>
            </xpath>
        </template>

        <template id="block_shared_snippet" name="Khối tin tức 9 - 3">
            <section id="block_shared_snippet_selector" class="h-100 w-100 d-block">
                <div class="container">
                    <div class="row bg-white">
                        <div class="col-lg-9 col-md-12 col-sm-12 oe_structure">
                            <span class="tex-dark">Thông báo</span>
                        </div>
                        <div class="col-lg-3 col-sm-12 col-md-12 oe_structure">
                            <span class="tex-dark">Tin tức mới</span>
                        </div>
                    </div>
                </div>
            </section>
        </template>

        <template id="sidebar_sub_box" name="Khối nhỏ trong sidebar">
            <section>
                <div id="sidebar-sub-box">
                    <a class="d-block" href="/" target="_blank">
                        <div class="d-flex gap-2 align-items-center">
                            <img t-attf-src="/bms_news_portal/static/src/images/#{image_file}"/>
                            <span t-esc="title"/>
                        </div>
                    </a>
                </div>
            </section>
        </template>

        <template id="directive_document_snippet" inherit_id="website.snippets">
            <xpath expr="//snippets[@id='snippet_groups']//t[@snippet-group][last()]" position="before">
                <t t-snippet="bms_news_portal.directive_document_snippet_template"
                   t-thumbnail="/bms_news_portal/static/src/images/word_icon.png"/>
            </xpath>
        </template>

        <template id="directive_document_snippet_template" name="Văn bản hướng dẫn">
            <t t-call="bms_news_portal.sidebar_sub_box">
                <t t-set="image_file" t-value="'word_icon.png'"/>
                <t t-set="title" t-value="'Văn bản chỉ đạo hướng dẫn'"/>
            </t>
        </template>

        <template id="weekly_work_schedule_snippet" inherit_id="website.snippets">
            <xpath expr="//snippets[@id='snippet_groups']//t[@snippet-group][last()]" position="before">
                <t t-snippet="bms_news_portal.weekly_work_schedule_snippet_template"
                   t-thumbnail="/bms_news_portal/static/src/images/calendar.png"/>
            </xpath>
        </template>

        <template id="weekly_work_schedule_snippet_template" name="Lịch công tác tuần">
            <t t-call="bms_news_portal.sidebar_sub_box">
                <t t-set="image_file" t-value="'calendar.png'"/>
                <t t-set="title" t-value="'Lịch công tác tuần'"/>
            </t>
        </template>

        <template id="suggestion_box_snippet" inherit_id="website.snippets">
            <xpath expr="//snippets[@id='snippet_groups']//t[@snippet-group][last()]" position="before">
                <t t-snippet="bms_news_portal.suggestion_box_snippet_template"
                   t-thumbnail="/bms_news_portal/static/src/images/suggestion_box.png"/>
            </xpath>
        </template>

        <template id="suggestion_box_snippet_template" name="Hòm thư góp ý">
            <t t-call="bms_news_portal.sidebar_sub_box">
                <t t-set="image_file" t-value="'suggestion_box.png'"/>
                <t t-set="title" t-value="'Hòm thư góp ý'"/>
            </t>
        </template>

        <template id="related_document_snippet" inherit_id="website.snippets">
            <xpath expr="//snippets[@id='snippet_groups']//t[@snippet-group][last()]" position="before">
                <t t-snippet="bms_news_portal.related_document_snippet_template"
                   t-thumbnail="/bms_news_portal/static/src/images/related_document.png"/>
            </xpath>
        </template>

        <template id="related_document_snippet_template" name="Tài liệu liên quan">
            <t t-call="bms_news_portal.sidebar_sub_box">
                <t t-set="image_file" t-value="'related_document.png'"/>
                <t t-set="title" t-value="'Tài liệu liên quan'"/>
            </t>
        </template>

        <template id="banner_snippet" inherit_id="website.snippets">
            <xpath expr="//snippets[@id='snippet_groups']//t[@snippet-group][last()]" position="before">
                <t t-snippet="bms_news_portal.banner_snippet_template"
                   t-thumbnail="/bms_news_portal/static/src/images/banner_icon.png"/>
            </xpath>
        </template>

        <template id="banner_snippet_template" name="Banner">
            <section>
                <div id="fatherland-front-banner">
                    <img t-attf-src="/bms_news_portal/static/src/images/banner.png"/>
                    <div class="banner-title">
                        <h5>
                            <strong>
                                Chào mừng kỷ niệm 80 năm Ngày Cách mạng tháng Tám thành công
                                (19/8/1945-19/8/2025) và
                                Ngày Quốc khánh nước Cộng hòa xã hội chủ nghĩa Việt Nam
                                (02/9/1945-02/9/2025)
                            </strong>
                        </h5>
                    </div>
                </div>
            </section>
        </template>

    </data>
</odoo>